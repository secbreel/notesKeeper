<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main_graph"
    app:startDestination="@id/navigation_categories">

    <fragment
        android:id="@+id/navigation_categories"
        android:name="com.secbreel.notes.ui.categories_list.CategoriesListFragment"
        android:label="categories"

        tools:layout="@layout/fragment_categories_list">
        <action
            android:id="@+id/action_categoriesListFragment2_to_categoryScreenFragment3"
            app:destination="@id/categoryScreenFragment3" />
        <action
            android:id="@+id/action_categoriesListFragment2_to_createCategoryActivity"
            app:destination="@id/createCategoryActivity" />

    </fragment>
    <fragment
        android:id="@+id/navigation_calendar"
        android:name="com.secbreel.notes.ui.calendar.CalendarFragment"
        android:label="calendar"
        tools:layout="@layout/fragment_calendar" >
        <action
            android:id="@+id/action_navigation_calendar_to_noteScreen"
            app:destination="@id/noteScreen" />
    </fragment>
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.secbreel.notes.ui.settings.SettingsFragment"
        android:label="settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/categoryScreenFragment3"
        android:name="com.secbreel.notes.ui.category_screen.CategoryScreenFragment"

        tools:layout="@layout/fragment_category_screen">
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <argument
            android:name="categoryTitle"
            app:argType="string" />
        <action
            android:id="@+id/action_categoryScreenFragment3_to_createNotesFragment3"
            app:destination="@id/createNotesFragment3" />
        <action
            android:id="@+id/action_categoryScreenFragment3_to_noteScreen"
            app:destination="@id/noteScreen" />
    </fragment>
    <fragment
        android:id="@+id/createNotesFragment3"
        android:name="com.secbreel.notes.ui.create_note.CreateNotesFragment"
        android:label="create note"
        tools:layout="@layout/fragment_create_notes">
        <argument
            android:name="categoryId"
            app:argType="integer" />
        <argument
            android:name="categoryTitle"
            app:argType="string" />
    </fragment>
    <activity
        android:id="@+id/createCategoryActivity"
        android:name="com.secbreel.notes.ui.create_category.CreateCategoryActivity"
        android:label="create category"
        tools:layout="@layout/activity_create_category" />
    <fragment
        android:id="@+id/noteScreen"
        android:name="com.secbreel.notes.ui.note_screen.NoteScreenFragment"
        tools:layout="@layout/fragment_note_screen">
        <argument
            android:name="noteId"
            app:argType="integer" />
    </fragment>
</navigation>